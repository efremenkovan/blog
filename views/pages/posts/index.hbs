<section class="page recent-posts-page">
    {{#if isEmpty }}
        <div class="posts-page">
            <h1>Нет постов</h1>
        </div>
    {{else}}
        <div class="posts-page">
            {{#each posts as | post |}}
            {{> posts/post_preview post}}
            {{/each}}
        </div>

        {{> posts/pagination pages}}
    {{/if}}
</section>
