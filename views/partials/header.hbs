<header>
	<nav>
		<a href="/" class="logotype">
			<img src="/assets/img/logo.svg" alt="Simple blog">
		</a>
		<ul id="menu" class="header__menu">
			{{#if isRecentPostsPage}}
			<li class="header__menu__element">
				<a class="header__menu__element__link active" href="/recent-posts">Последние посты</a>
			</li>
			{{else}}
			<li class="header__menu__element">
				<a class="header__menu__element__link" href="/recent-posts">Последние посты</a>
			</li>
			{{/if}}


			{{#if isAuth}}

			{{#if isBlog}}
			<li class="header__menu__element">
				<a class="header__menu__element__link active" href="/blog">Мой блог</a>
			</li>
			{{else}}
			<li class="header__menu__element">
				<a class="header__menu__element__link" href="/blog">Мой блог</a>
			</li>
			{{/if}}

			{{#if isSavedPostsPage}}
			<li class="header__menu__element">
				<a class="header__menu__element__link active" href="/saved-posts">Закладки</a>
			</li>
			{{else}}
			<li class="header__menu__element">
				<a class="header__menu__element__link" href="/saved-posts">Закладки</a>
			</li>
			{{/if}}

			{{#if isPostCreatePage}}
			<li class="header__menu__element">
				<a class="header__menu__element__link active" href="/post/create">Новый пост</a>
			</li>
			{{else}}
			<li class="header__menu__element">
				<a class="header__menu__element__link" href="/post/create">Новый пост</a>
			</li>
			{{/if}}
			<li class="header__menu__element">
				<a class="header__menu__element__link" href="/logout">Выйти</a>
			</li>
			{{else isLogin}}
			<li class="header__menu__element">
				<a class="header__menu__element__link" href="/signup">Зарегистрироваться</a>
			</li>
			{{else}}
			<li class="header__menu__element">
				<a class="header__menu__element__link" href="/signin">Войти</a>
			</li>
			{{/if}}
		</ul>
		<button id="menu-button">
			<div class="menu-button__center"></div>
		</button>
	</nav>
</header>